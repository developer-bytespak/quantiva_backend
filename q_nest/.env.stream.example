# Voice Stream Configuration
# Copy this to your .env file and fill in your API keys

# ========================================
# STT (Speech-to-Text) Configuration
# ========================================
# Options: 'deepgram', 'assemblyai', 'openai-whisper', 'mock'
STREAM_STT_PROVIDER=mock

# Deepgram API Key (if using Deepgram)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AssemblyAI API Key (if using AssemblyAI)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# OpenAI API Key (if using OpenAI Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# TTS (Text-to-Speech) Configuration
# ========================================
# Options: 'openai', 'aws-polly', 'google', 'mock'
STREAM_TTS_PROVIDER=mock

# OpenAI TTS Settings
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# AWS Polly Settings (if using AWS Polly)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_POLLY_VOICE=Joanna

# Google Cloud TTS Settings (if using Google)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GOOGLE_TTS_VOICE=en-US-Wavenet-D

# ========================================
# LLM Configuration
# ========================================
# Options: 'openai', 'anthropic', 'local', 'mock'
STREAM_LLM_PROVIDER=openai

# OpenAI LLM Settings
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Anthropic Settings (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM Settings (if using local model)
LOCAL_LLM_URL=http://localhost:8000/v1/completions
LOCAL_LLM_MODEL=llama-2-7b-chat

# ========================================
# Stream Settings
# ========================================
# WebSocket server port (usually same as main app)
STREAM_WS_PORT=3001

# Enable CORS for WebSocket
STREAM_CORS_ENABLED=true
STREAM_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Session timeout (milliseconds)
STREAM_SESSION_TIMEOUT=300000

# Max concurrent streams per user
STREAM_MAX_CONCURRENT_SESSIONS=2

# Audio chunk size (bytes)
STREAM_AUDIO_CHUNK_SIZE=8192

# Enable verbose logging
STREAM_DEBUG=false

# ========================================
# Rate Limiting
# ========================================
# Max requests per minute per user
STREAM_RATE_LIMIT_TTL=60
STREAM_RATE_LIMIT_MAX=30

# Max audio duration per session (seconds)
STREAM_MAX_AUDIO_DURATION=300

# ========================================
# Context Enrichment
# ========================================
# Enable crypto context enrichment
STREAM_ENABLE_CONTEXT=true

# Max symbols to fetch for context
STREAM_MAX_CONTEXT_SYMBOLS=5

# Context cache TTL (seconds)
STREAM_CONTEXT_CACHE_TTL=60
