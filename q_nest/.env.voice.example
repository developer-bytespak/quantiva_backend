# Environment Variables for Voice Assistant

# STT (Speech-to-Text) Configuration
STT_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
STT_OPENAI_MODEL=whisper-1

# Alternative STT providers (uncomment to use)
# DEEPGRAM_API_KEY=your_deepgram_key
# STT_DEEPGRAM_MODEL=nova-2
# ASSEMBLYAI_API_KEY=your_assemblyai_key

# TTS (Text-to-Speech) Configuration
TTS_PROVIDER=openai
TTS_OPENAI_MODEL=tts-1
TTS_OPENAI_VOICE=alloy

# Alternative TTS providers (uncomment to use)
# ELEVENLABS_API_KEY=your_elevenlabs_key
# ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_POLLY_VOICE_ID=Joanna

# LLM Configuration
LLM_PROVIDER=openai
LLM_OPENAI_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# Alternative LLM providers (uncomment to use)
# ANTHROPIC_API_KEY=your_anthropic_key
# LLM_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Session Configuration
MAX_CONCURRENT_STREAMS=5
MAX_AUDIO_CHUNK_SIZE=65536
SESSION_TIMEOUT=300000
AUDIO_BUFFER_SIZE=10

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=10

# JWT Configuration (should already exist)
JWT_SECRET=your-jwt-secret-key-here
